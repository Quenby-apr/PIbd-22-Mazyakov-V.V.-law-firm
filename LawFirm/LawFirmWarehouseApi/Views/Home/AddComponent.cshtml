@{
    ViewData["Title"] = "AddComponent";
}
<div class="text-center">
    <h2 class="display-4">Пополнение склада</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Склад:</div>
        <div class="col-8">
            <select name="WarehouseId" class="form-control" asp-items="@(new SelectList(ViewBag.Warehouses, "Id", "WarehouseName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Компоненты:</div>
        <div class="col-8">
            <select name="ComponentId" class="form-control" asp-items="@(new SelectList(ViewBag.Components, "Id", "ComponentName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4">Количество:</div>
        <div class="col-8">
            <input type="text" class="form-control" name="Count" />
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <input type="submit" value="Пополнить" class="btn btn-primary" />
        </div>
    </div>
</form>