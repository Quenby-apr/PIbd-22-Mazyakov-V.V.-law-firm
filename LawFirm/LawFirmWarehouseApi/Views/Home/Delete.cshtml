@model LawFirmBusinessLogic.ViewModels.WarehouseViewModel

@{
    ViewData["Title"] = "Delete";
}

    <div class="text-center">
        <h2 class="display-4">Удаление склада</h2>
    </div>

<h3>Вы действительно хотите удалить эту запись?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-6">
            <dl class="row">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.WarehouseName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WarehouseName)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.NameResponsiblePerson)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NameResponsiblePerson)
                </dd>
            </dl>
            <form method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" /> |
                <a asp-action="Index">Назад</a>
            </form>
        </div>
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Компонент
                        </th>
                        <th>
                            Количество
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.WarehouseComponents)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value.Item1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value.Item2)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
